/* pages/article/article.wxss */
.article_list_layout {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.article_list_header {
  min-height: 35px;
  height: 35px;
  padding: 0;
  margin: 0;
  width: 100%;
  min-width: 200px;
  background: #fff;
  border-bottom: 1px solid #ebebeb;
}

.article_list_body {
  flex: 1;
  position: relative;
}

.article_list_scroll_content {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  overflow-y: auto;
}

.article_list_item {
  width: 100%;
  height:89px;
  max-height: 100px;
  /* overflow: hidden; */
}
.article_content_item {
  height: 50px;
}


.van-card__desc {
  height: 16px;
}
view .list_cls.van-card {
  height: 88px !important;
  overflow: hidden;
  word-break: break-all;
  /* white-space: nowrap; */
  text-overflow: ellipsis;
}

