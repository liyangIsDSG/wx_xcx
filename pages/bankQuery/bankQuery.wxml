<!--pages/bankQuery/bankQuery.wxml-->
<view>
  <view class="pages-box">
    <view class="fs32 fc99">
      请输入您要查询的银行卡号码
    </view>
    <!--  搜索框  -->
    <view class="inp-box">
      <input class="inp" bindinput="bankID" placeholder="银行卡号码" placeholder-style="font-size:30rpx" />
      <view class="inpimg">
        <image src="../../images/search.png" class="pagesimg" />
      </view>
    </view>
    <!--  提交按钮  -->
    <view class="btn-box">
      <button class="btn fs32" bindtap="getdata">
        查 询
      </button>
    </view>
  </view>
</view>

<!-- 显示查询详情 -->
<view wx:if="{{show}}" class="det-box">
  <view class="pglist fs36 fc99" wx:fpo>详细信息</view>
  <view class="pglist fc99">
    <view class="pg-l fs32">银行名称：</view>
    <view class="pg-r fs32">{{detail.bankName}}</view>
  </view>
  <view class="pglist fc99">
    <view class="pg-l fs32">银行卡号：</view>
    <view class="pg-r fs32">{{detail.bankCard}}</view>
  </view>
   <view class="pglist fc99">
      <view class="pg-l fs32">卡片类型：</view>
      <view class="pg-r fs32">{{detail.cardType}}</view>
    </view>
    <view class="pglist fc99">
      <view class="pg-l fs32">银行网址：</view>
      <view class="pg-r fs32">{{detail.site}}</view>
    </view>
    <view class="pglist fc99">
      <view class="pg-l fs32">客服电话：</view>
      <view class="pg-r fs32">{{detail.bankMobile}}</view>
    </view>

</view>